{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "./out",
    "lib": ["es7"],
    "sourceMap": false,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "exclude": ["node_modules", ".vscode-test", "test_files"]
}
