{
    "name": "sfdx-autoheader",
    "displayName": "SFDX Autoheader",
    "description": "Automatic Template-Based File Header Generation for SFDX",
    "version": "0.0.1-alpha",
    "publisher": "HugoOM",
    "repository": {
        "type": "git",
        "url": "https://github.com/HugoOM/sfdx_autoheader"
    },
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:apex"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "SFDX Autoheader Config",
            "properties": {
                "SFDX_Autoheader.username": {
                    "type": "string",
                    "default": "phUser@phDomain.com",
                    "description": "Sets the Username to be utilized in the SFDX File Header"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}