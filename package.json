{
  "name": "sfdx-autoheader",
  "displayName": "Salesforce Documenter",
  "description": "Automated Code Documentation Generation for Salesforce",
  "version": "0.5.1",
  "publisher": "HugoOM",
  "license": "MIT",
  "badges": [
    {
      "url": "https://travis-ci.org/HugoOM/sfdx_autoheader.svg?branch=master",
      "href": "https://travis-ci.org/HugoOM/sfdx_autoheader",
      "description": "Travis-CI Build Status for Master Branch (Current Release)"
    }
  ],
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/HugoOM/sfdx_autoheader"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "apex",
    "visualforce",
    "Salesforce",
    "File Header",
    "Method Header",
    "Code Comment",
    "Documentation",
    "Documenter"
  ],
  "icon": "images/logo.png",
  "galleryBanner": {
    "theme": "dark",
    "color": "#0C2D61"
  },
  "activationEvents": [
    "onLanguage:apex",
    "onLanguage:visualforce",
    "onLanguage:javascript",
    "onLanguage:html"
  ],
  "main": "./out/documenter.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "extension.generateMethodHeader",
          "group": "SFDoc",
          "when": "editorLangId == apex"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.generateMethodHeader",
          "group": "SFDoc",
          "when": "editorLangId == apex"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.generateMethodHeader",
        "title": "Generate Method Header",
        "category": "SFDoc"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Salesforce Documenter Configuration",
      "properties": {
        "SFDoc.username": {
          "type": "string",
          "default": "phUser@phDomain.com",
          "description": "Sets the File & Method Header Username"
        },
        "SFDoc.EnableForAllWebFiles": {
          "type": "boolean",
          "default": false,
          "description": "Enable On-Save File Headers on ALL JavaScript and HTML files. NOT just those that are part of a Lightning Component. \n WARNING: This Setting Has Priority Over Lightning Settings When Enabled"
        },
        "SFDoc.EnableForApex": {
          "type": "boolean",
          "default": true,
          "description": "Enable On-Save File Headers on Apex Files"
        },
        "SFDoc.EnableForVisualforce": {
          "type": "boolean",
          "default": true,
          "description": "Enable On-Save File Headers on Visualforce Pages"
        },
        "SFDoc.EnableForLightningMarkup": {
          "type": "boolean",
          "default": true,
          "description": "Enable On-Save File Headers on Lightning Markup File (Aura & LWC)"
        },
        "SFDoc.EnableForLightningJavascript": {
          "type": "boolean",
          "default": false,
          "description": "Enable On-Save File Headers on Lightning Javascript Files (Aura & LWC)"
        }
      }
    },
    "languages": [
      {
        "id": "apex",
        "filenames": [
          "testFile_SFDXAutoheader.apex"
        ]
      },
      {
        "id": "visualforce",
        "filenames": [
          "testFile_SFDXAutoheader.page"
        ]
      },
      {
        "id": "html",
        "filenames": [
          "testFile_SFDXAutoheader.cmp"
        ]
      },
      {
        "id": "javascript",
        "filenames": [
          "testFile_SFDXAutoheaderController.js",
          "testFile_SFDXAutoheader.js"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "dev": "tsc -p ./ -w",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42",
    "chai": "^4.2.0",
    "eslint": "^4.11.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  }
}
